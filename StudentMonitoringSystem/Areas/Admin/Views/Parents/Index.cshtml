@model IEnumerable<StudentMonitoringSystem.Models.Parent>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";


    ViewBag.heading = "Parents";

    ViewBag.directory1 = "Parent";
    ViewBag.directory2 = "Index";
    ViewBag.directory3 = "details";
}


<div class="col">
    <button type="button" class="mb-1 mt-1 mr-1 btn btn-lg btn-primary" onclick="location.href='@Url.Action("Create", "Students")';return false;"> Add new Students </button>
    <section class="card">
        <header class="card-header">
            <div class="card-actions">

            </div>

            <h2 class="card-title">Parent's Details </h2>
        </header>
        <div class="card-body">
            <table class="table table-responsive-md table-hover mb-0">
                <tr>
                    <th>
                        @*@Html.DisplayNameFor(model => model.ParentsID)*@ID
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.FirstName)*@ First Name
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.LastName)*@ Last Name
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.PhoneNo)*@ Mobile
                    </th>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                 
                    
                    <th>Actions</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParentsID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNo)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        
                       
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </section>
</div>
