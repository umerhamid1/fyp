
@{
    ViewBag.Title = "NavTab";
    Layout = "~/Views/Shared/_Layout1.cshtml";
    var year = DateTime.Now.Year.ToString();

    ViewBag.heading = "Students";

    ViewBag.directory1 = "Index";
    ViewBag.directory2 = "Add";
    ViewBag.directory3 = "Student";
}







<button type="button" class="mb-1 mt-1 mr-1 btn btn-lg btn-primary" onclick="location.href='@Url.Action("Create", "Students")';return false;"> Add new Students </button>

<div class="row">
<div class="col">
<section class="card">
<header class="card-header">
    <div class="card-actions">
       
    </div>
						
    <h2 class="card-title">Add New Students @year</h2>
</header>
<div class="card-body">
    <form class="form-horizontal form-bordered" method="get">
        <div class="row">
            <div class="col-lg-12">
                <div class="tabs">
                    <ul class="nav nav-tabs">
                        <li class="nav-item active">
                            <a class="nav-link" href="#Pending" data-toggle="tab"><i class="fa fa-star"></i> Pending</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#Approved" data-toggle="tab">Approved</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#Reject" data-toggle="tab">Reject</a>
                        </li>
                

                    </ul>

            

                    <div class="tab-content">
                        <div id="Pending" class="tab-pane active">

                            @Html.Action("Index")
                        </div>
                        <div id="Approved" class="tab-pane">
                            @Html.Action("ApprovedStudent")
                   
                        </div>
                        <div id="Reject" class="tab-pane">
                   
                            @Html.Action("RejectStudent")
                    
                        </div>
                
                
              
                    </div>
            

                </div>
            </div>


        </div>



    </form>
            </div>
        </section>
    </div>
</div>



