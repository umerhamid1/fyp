                    function(data) {
                        var selectOptions = "";
                        $.each(data,
                            function(key, val) {
                                // alert(val.ID);
                                selectOptions += "<option value='" + val.ID + "'>" + val.Name + "</option>";

                            });

                        $('#TeacherID').empty().html(selectOptions);
                    });
            });


        });


    </script>
}
