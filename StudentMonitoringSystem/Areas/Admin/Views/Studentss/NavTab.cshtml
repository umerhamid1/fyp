
@{
    ViewBag.Title = "NavTab";
    Layout = "~/Views/Shared/_Layout1.cshtml";
    var year = DateTime.Now.Year.ToString();
}

<h2>New Admissions @year</h2>

<p>
    @Html.ActionLink("Add new Students", "Create")
</p>

<div class="row">
    <div class="col-lg-12">
        <div class="tabs">
            <ul class="nav nav-tabs">
                <li class="nav-item active">
                    <a class="nav-link" href="#Pending" data-toggle="tab"><i class="fa fa-star"></i> Pending</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#Approved" data-toggle="tab">Approved</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#Reject" data-toggle="tab">Reject</a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="Pending" class="tab-pane active">

                    @Html.Action("Index")



                 





                </div>
                <div id="Approved" class="tab-pane">
                    @Html.Action("ApprovedStudent")
                   
                </div>
                
                
                <div id="Reject" class="tab-pane">
                   
                    
                    @Html.Action("RejectStudent")
                    
                </div>
                
                

            </div>
        </div>
    </div>


</div>


